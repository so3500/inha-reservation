<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90ADB0"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:orientation="horizontal" >

          <ImageButton
            android:id="@+id/login_home_img_btn"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/inha_logo4"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:background="#EAEAEA" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="3"
            android:background="#EAEAEA"
            android:gravity="center"
            android:text="인하대학교"
            android:textColor="#000000"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/login_join_btn"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:background="#EAEAEA"
                android:onClick="onClick"
                android:text="회원가입"
                android:textSize="10dp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="15dp"
        android:background="#90ADB0"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
             android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:scaleType="fitCenter"
    android:src="@drawable/logo" 
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#90ADB0"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="학번"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_id_edit"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:background="@drawable/round"
            android:gravity="center"
            android:hint="학번을 입력하세요"
            android:imeOptions="actionSearch"
            android:inputType="number"
            android:lines="1"
            android:singleLine="true"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#90ADB0"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <TextView
            android:id="@+id/login_password_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="비밀번호"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_pwd_edit"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:background="@drawable/round"
            android:gravity="center"
            android:hint="비밀번호를 입력하세요"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:password="true"
            android:singleLine="true"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#90ADB0"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#90ADB0"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:background="@drawable/round_login"
            android:text="로그인"
            android:textSize="20dp" >
        </Button>
    </LinearLayout>

</LinearLayout>